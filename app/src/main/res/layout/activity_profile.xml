<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Create Profile"
        android:textColor="@color/text1"
        android:textSize="50sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            android:tint="@color/colorPrimary" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents.Light">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pictureB"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Take Picture"
                android:textAllCaps="false"
                android:textColor="@color/text1"
                android:textSize="15sp"
                app:rippleColor="@color/ripple" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <EditText
        android:id="@+id/edittextname"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColorHint="@color/text2" />

    <EditText
        android:id="@+id/edittextfees"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Student Fees (in numerical USD amount)"
        android:inputType="numberDecimal"
        android:textColorHint="@color/text2" />

    <EditText
        android:id="@+id/edittextyear"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Graduation Year"
        android:inputType="number"
        android:textColorHint="@color/text2" />

    <EditText
        android:id="@+id/edittextschool"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="School of Major"
        android:textColorHint="@color/text2" />

    <EditText
        android:id="@+id/edittextphone"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColorHint="@color/text2" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MaterialComponents.Light">
        <com.google.android.material.button.MaterialButton
            style="?attr/borderlessButtonStyle"
            android:layout_gravity="center"
            app:rippleColor="@color/ripple"
            android:textColor="@color/text1"
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Add Information"
            android:textAllCaps="false"
            android:textSize="25sp" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>